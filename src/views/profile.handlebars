<div class="section">
    <h2 class="subtitle is-2">Â¡Bienvenido {{username}} !</h2>
    <div class="mb-3">
            <button class="btn btn-outline-danger" href="/api/sessions/signout"><a href="/api/sessions/signout">Sign Out</a></button>
    </div>
    <form action="/chat" method="post">
        <div class="mb-3">
            <input type="text" name="username" value="{{username}}" class="form-control" aria-label="Disabled input example" readonly>
        </div>
        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Manda un mensaje</label>
            <textarea type="text" class="form-control" name="message" id="message" rows="3"></textarea>
            <br>
            <button type="button submit" class="btn btn-primary" value="SEND">Enviar</button>
        </div>
    </form>
</div>

<div class="section" >
    <h3 class="subtitle is-3">Los productos que tenemos son:</h3>
        {{#each products}}
        <div class="section" >
            <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="{{thumbnail}}" width="100" alt="{{description}}">
                <div class="card-body">
                    <h5 class="card-title">{{title}}</h5>
                    <p class="card-text">{{description}}</p>
                    <p class="card-text">Precio: $ {{price}}</p>
                    <p class="card-text">Stock: {{stock}}</p>
                    <p class="card-text">Category: {{category}}</p>
                    <br>
                    <button type="button" class="btn btn-success">Agregar al carrito</button>
                </div>
            </div>
        </div>
        {{/each}}
</div>